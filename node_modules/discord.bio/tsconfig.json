{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitReturns": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types/",
    "resolveJsonModule": true
  },
  "include": [
    "src/",
  ]
} 